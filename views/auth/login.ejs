<%- include('../includes/header.ejs')%>
</head>
<body>
  <div class="container" style="margin-top: 50px;">
    <div class="text-center"><img src="/images/a's pay (2).jpg" alt="" style="width: 150px;height: 150px;"> </div>
    <div class="row ">
      <div class="cont col-md-4 offset-md-4 p-3">
        <h2 class="text-center h2">Login</h2>
        <form action="/login" method="post">
          <small style="color: red;"><%=perrors %></small>
              <div class="form-group my-3">

                <label for="exampleInputName">Email</label>
                <i class="fas fa-envelope" id="shows"></i>
                <input type="email" placeholder="Enter email" name="email">
                <% for(let err of logErr){
                  if(err.path == "email"){%>
                    <small style="color: red;"><%= err.msg%></small>
                <%  }
                }%>
              </div>
              <div class="form-group my-3">
                <label for="exampleInputName">Password</label>
                <i class="fas fa-eye-slash" id="show"></i>
                <input type="password" placeholder="Enter password" name="password" id="pawd" >
                <% for(let err of logErr){
                  if(err.path == "password"){%>
                    <small style="color: red;"><%= err.msg%></small>
                <%  }
                }%>              </div>
                <small style="color: red;"><%=emerr %></small>
              <div class="text-center my-3">
                <button type="submit" class="btn" id="play">Login</button>
              </div>
              <div class="container">
                <div class="cont-or">
                  <hr>
                  <div  class="text-center or"><span class="">Or</span></div>
                </div>
                
                  <div class='icon'>
                    <a href=""><i class='fab fa-facebook face mx-2'></i></a>
                     <a href=""><i class='fab fa-twitter twit mx-2'></i></a>
                    <a href=""><i class='fab fa-instagram insta mx-2'></i></a>
                    <a href="https://wa.me/08107905908"><i class='fab fa-whatsapp what mx-2'></i></a>
                   <a href="https://google.com"><i class='fab fa-google goo mx-2'></i></a>
                   </div>
              </div>
             
              
        </form>
      </div> 
    </div>
   
 </div>

<%- include('../includes/footer.ejs')%> 
<script>
  let icon = document.getElementById('show')
  let pawd = document.getElementById('pawd')
  icon.addEventListener('click',clickMe)
  function clickMe(e){
    e.preventDefault();
    if(pawd.getAttribute('type') == "password"){
       pawd.setAttribute('type','text')
       icon.className += 'fas fa-eye'
    }else{
      pawd.setAttribute('type','password')
      icon.className += 'fas fa-eye-slash'
  
    }
  }
  </script>
</body>
</html>